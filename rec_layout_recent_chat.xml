<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="3dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    app:cardCornerRadius="@dimen/fastscroll__bubble_corner"
    app:cardBackgroundColor="@color/off_white"
    android:layout_gravity="center_horizontal"
    android:background="@color/off_white"
    android:id="@+id/recent_chat_whole_layour">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@color/off_white">

        <androidx.cardview.widget.CardView
            android:paddingTop="8dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardBackgroundColor="@color/light_grey"
            app:cardCornerRadius="40dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/img_recent_pic"
                android:src="@drawable/baseline_person_24"/>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_recent_username"
                android:layout_width="200dp"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_last_msg"
                android:layout_width="200dp"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:textSize="15dp" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_recent_time"
            android:layout_width="91dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>